<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.moritzgruber.pidebugger.pidebugger.PiInterfaceActivity"
    tools:showIn="@layout/activity_pi"
    android:id="@+id/scrollView">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:paddingTop="30dp"
            >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/descColumn"
            android:layout_toLeftOf="@+id/leftColumn"
            android:paddingRight="5dp">


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/leftRow"
            android:layout_toLeftOf="@+id/rightColumn"
            android:paddingRight="5dp">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rightRow"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp">

        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
